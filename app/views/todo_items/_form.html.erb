
<%= form_for([@todo_project, @todo_project.todo_items.build], :html => {:class => 'custom_class3'}) do |f| %>
 <%= f.text_field :title, label: 'Title', placeholder: "Title", class: 'padng' %>
 <%= f.text_field :task_content, label: 'Task details', placeholder: "Details", class: 'padng' %>
 <%= f.text_field :implement_before, label: 'Date', data:{ provide:'datepicker' }, :placeholder => 'dd/mm/yyyy', class: 'datapiecker_class padng' %>

  <%= f.select :order_type, [['Low Priority', 1], ['Normal Priority', 2], ['High Priority', 3]], {}, {class: "select-wrapper-select1"} %>
  <label class="custom-file-upload1">
  <%= f.file_field :todo_file, class: 'file_up', style: "color: green; display: none;" %>
    <i class="fas fa-cloud"></i> <%=I18n.t("file_upload")%>
  </label>
  <!-- <div class="select-arrow-1"></div> -->

 <%= f.submit I18n.t("add")%>
<% end %>

<script>
  $( document ).ready(function() {
    $('.datapiecker_class').datepicker({format: 'dd/mm/yyyy'});
  });
</script>
