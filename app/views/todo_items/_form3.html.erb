
<%= form_with(model: todo_item, local: true, class: :custom_class3) do |form_| %>
  <% if todo_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(todo_item.errors.count, "error") %> prohibited this todo_item from being saved:</h2>

      <ul>
      <% todo_item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <%= form_.text_field :title, label: 'Title', placeholder: "Title", class: 'padng' %>
 <%= form_.text_field :task_content, label: 'Task details', placeholder: "Details", class: 'padng' %>
 <%= form_.text_field :implement_before, label: 'Date', data:{ provide:'datepicker' }, :placeholder => 'dd/mm/yyyy', class: 'datapiecker_class1 padng' %>

 <%= form_.select :order_type, [['Low Priority', 1], ['Normal Priority', 2], ['High Priority', 3]], {}, {class: "select-wrapper-select1"} %>

 <%= form_.submit I18n.t("save_changes")%>
<% end %>

<script>
  $( document ).ready(function() {
    $('.datapiecker_class1').datepicker({format: 'dd/mm/yyyy'});
  });
</script>
