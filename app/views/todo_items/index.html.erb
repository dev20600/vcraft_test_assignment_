<main>
  <div class="container">
    <div class="row color2">
      <p id="notice"><%= notice %></p>
    </div>

    <div class="row">
      <h3>Todo Items</h3>
    </div>

    <div class="row">
      <table>
        <thead>
          <tr>
            <th class="mycellstyle1">Task Title</th>
            <th class="mycellstyle">Details</th>      
            <th class="mycellstyle">Release date</th>      
            <th class="mycellstyle">Priority</th>      
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @todo_items.each do |todo_item| %>
            <tr>
              <td class="mycellstyle1"><%= todo_item.title %></td>
              <td class="mycellstyle"><%= todo_item.task_content %></td>
              <td class="mycellstyle"><%= todo_item.implement_before %></td>
              <td class="mycellstyle"><%= todo_item.order_type %></td>

              <td class="mycellstyle"><%= link_to 'Show', todo_item %></td>
              <td class="mycellstyle"><%= link_to 'Edit', edit_todo_item_path(todo_item) %></td>
              <td class="mycellstyle"><%= link_to 'Destroy', todo_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <br>

    <div class="row">
      <%= link_to 'New Todo Item', new_todo_item_path %>
    </div>

  </div>
</main>
